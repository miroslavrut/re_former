<h1>Edit</h1>

<%= form_for @user do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, placeholder: "New Username" %><br>
  <%= f.label :email, "Email:"%>
  <%= f.email_field :email, value: "example@mail.com" %><br>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password%><br>
  <%= f.submit "Submit" %>
<% end %>

<% if @user.errors.any? %>
  <h3><%= pluralize(@user.errors.count, "errors")%></h3>
  <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>